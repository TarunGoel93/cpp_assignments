// 12) write a program to find an array.

#include<iostream>
using namespace std;

int main()
{
    int size;
    int search;
    cout<<"Enter the size of the array: ";
    cin>>size;
    
    int arr[size];
    
    for(int i=0;i<size;i++){
        cin>>arr[i];
    }
    
    cout<<"The array elements are: "<<endl;
    for(int i=0;i<size;i++){
        cout<<arr[i]<<" ";
    }
    
    cout<<endl;
    
    cout<<"Which elemnet do you want to search? : ";
    cin>>search;
    
    for(int i=0;i<size;i++){
        if(search==arr[i]){
            cout<<i;
        }
        
    }
  
    return 0;
}
