// 2) Write a program to determine the average of 1 to n numbers.

#include<iostream>
using namespace std;

int main()
{
    float num , sum=0;
    cout<<"Enter the number: ";
    cin>>num;
    
    for(int i=num;i>=1;i--){
        sum+=i;
    }
    
    cout<<"The average of 1 to "<<num<<" is : "<<sum/2;
    
return 0;
}
